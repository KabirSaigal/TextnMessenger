<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriendsActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/find_friends_toolbar">

    </include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_friends_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_friends_toolbar"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="673dp"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="407dp"
        android:layout_height="49dp"
        android:layout_above="@+id/find_friends_recycler_list"
        android:layout_alignStart="@+id/find_friends_recycler_list"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/background_light"
        android:hint="Search.."
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        tools:lines="1" />
</RelativeLayout>